=content_for :specific_javascript do
  :javascript
    $('a[href="#how-to-use"]').on('shown.bs.tab', function (e) {
      $(".setup-reminder-tab").show();
    });
    $('a[href="#time-formats"], a[href="#keywords"], a[href="#intuitive-system"], a[href="#make-a-test"]').on('shown.bs.tab', function (e) {
      $(".setup-reminder-tab").hide();
    });